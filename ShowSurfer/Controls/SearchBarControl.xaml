<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShowSurfer.Controls.SearchBarControl">
    <VerticalStackLayout>
        <!--Border for search bar to give it a nice corner radius-->
        <Border StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10"
                HeightRequest="50"
                HorizontalOptions="Center"
                Margin="0,0,0,0">
            <!--Search Bar to find specific movies and tv shows-->
            <!--Search bar sends user to the results page-->
            <SearchBar Placeholder="Search for a movie..."
                       HorizontalOptions="FillAndExpand"
                       x:Name="searchBar"
                       WidthRequest="350"
                       TextColor="Black"
                       BackgroundColor="White"
                       SearchButtonPressed="OnSearchButtonPressed"
                       SearchCommandParameter=""/>
            
        </Border>
    </VerticalStackLayout>
</ContentView>
